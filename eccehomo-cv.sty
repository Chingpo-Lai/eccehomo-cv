%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\newcommand{\eccehomo@localize@expand}[2]{%
    \ifthenelse{\equal{#1}{} \OR \equal{#1}{\eccehomo@localize@current}}
        {#2}{}
}

% Direct access to \eccehomo@localize@expand
\newcommand{\localize}[2]{%
    \eccehomo@localize@expand{#1}{#2}
}
