% Definition of content sectioning
\renewenvironment{section}[2][]
  {\setkeys{localize}{#2}%
  \eccehomo@localize@expand{\eccehomo@localize@lang}{%
      \vspace{1em} \hspace{-2em}
       \begin{tabular}{p{\marginlength}p{\contentlength}}
       \hrule & \raisebox{-.5ex}[0pt][0pt]{ \large\sc \eccehomo@localize@text } \hrulefill \vspace{1em}\\ }
  }
  { \eccehomo@localize@expand{\eccehomo@localize@lang}{ \end{tabular} } }

\newcommand{\place}[3][] {\eccehomo@localize@expand{#1}{%
    & \textbf{#3}, #2 \vspace{0.2em} \\ }
}
  
\renewcommand{\subsection}[2][] {\eccehomo@localize@expand{#1}{%
    & \textbf{#2} \vspace{0.5em} \\ }
}

\newcommand{\position}[4][] {\eccehomo@localize@expand{#1}{%
    \noindent{\bf \small #2} & \emph{#3}           \\
                             & #4  \vspace{0.5em}  \\
    }
}

% same as \position but only one line
\renewcommand{\item}[3][]{\eccehomo@localize@expand{#1}{%
    \noindent{\bf \small #2} &   #3 \vspace{2pt}\\ }
}
